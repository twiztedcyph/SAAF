<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#015981">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_button_text_wheresMyCar"
        android:id="@+id/mainActivityWMCButton"
        android:gravity="center"
        android:onClick="wheresMyCarClicked"
        android:background="@drawable/button_style"
        android:textColor="@color/button_text_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/mainActivityWHTButton"
        android:layout_alignRight="@+id/mainActivityWHTButton"
        android:layout_below="@+id/main_activity_logo"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_button_text_whatHappenedToday"
        android:id="@+id/mainActivityWHTButton"
        android:onClick="whatHappenedTodayClicked"
        android:background="@drawable/button_style"
        android:textColor="@color/button_text_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/mainActivityWMCButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Open Day \nApp"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_alignTop="@+id/main_activity_logo"
        android:layout_alignBottom="@+id/main_activity_logo"
        android:layout_toRightOf="@+id/main_activity_logo"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_logo"
        android:focusableInTouchMode="false"
        android:src="@drawable/uealogo_white_stacked_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView10"
        android:src="@drawable/nfc_logo"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/mainActivityWHTButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scan NFC tags around campus for interesting info on buildings and people!"
        android:id="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/imageView10"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>
