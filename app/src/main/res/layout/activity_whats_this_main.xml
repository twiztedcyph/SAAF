<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.ashlimeianwarren.saaf.WhatsThisMainActivity"
                android:id="@+id/WT_maintext"
                android:background="#015981">

    <TextView
        android:text="What&apos;s this?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whatsthis_maintext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:autoText="true"
        android:textColor="#ffffffff"
        android:textAlignment="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="People"
        android:id="@+id/peopleButton"
        android:layout_below="@+id/whatsthis_maintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:onClick="peopleButtonClicked"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Places"
        android:id="@+id/placesButton"
        android:layout_below="@+id/peopleButton"
        android:layout_alignLeft="@+id/peopleButton"
        android:layout_alignStart="@+id/peopleButton"
        android:layout_marginTop="44dp"
        android:onClick="placesButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Content"
        android:id="@+id/addContentButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="addContentClicked"/>

</RelativeLayout>