<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ashlimeianwarren.saaf.WhatHappenedTodaySubjectActivity"
    android:background="#015981">

    <TextView
        android:text="Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wht_subject_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:autoText="false"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wht_subject_listview"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/wht_subject_title"
        android:layout_above="@+id/wht_subject_image_button"
        android:layout_centerHorizontal="true"
        android:dividerHeight="10dp"
        android:background="#015981"
        android:divider="#015981" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="RECORD\nAUDIO"
        android:id="@+id/wht_subject_audio_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="newAudioNote"
        android:background="@drawable/button_style"
        android:textColor="@color/button_text_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="MAKE A\nNOTE"
        android:id="@+id/wht_subject_text_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/wht_subject_listview"
        android:layout_alignEnd="@+id/wht_subject_listview"
        android:onClick="newTextNote"
        android:background="@drawable/button_style"
        android:textColor="@color/button_text_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TAKE A\nPHOTO"
        android:id="@+id/wht_subject_image_button"
        android:layout_alignTop="@+id/wht_subject_audio_button"
        android:layout_centerHorizontal="true"
        android:onClick="newImageNote"
        android:background="@drawable/button_style"
        android:textColor="@color/button_text_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:focusableInTouchMode="false"
        android:src="@drawable/uealogo_white_stacked_small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
